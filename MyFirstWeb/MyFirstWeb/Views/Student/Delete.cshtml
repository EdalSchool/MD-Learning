@using MyFirstWeb.Models

@model MyFirstWeb.Models.Student

@{
    ViewData["Title"] = "Student Deletion";
    Layout = "_Layout";
}

<h1>@ViewData["Title"]</h1>

<div class="alert alert-danger d-flex align-items-center" role="alert">
  <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
  <div>
    <i class="fa-solid fa-triangle-exclamation fa-beat-fade"></i>  Are you sure you want to delete this Student?
  </div>
</div>

    <div asp-validation-summary="All"></div>
<form method = "POST">
    <div>
        <div class="btn-group" role="group" aria-label="Basic mixed styles example">
            <a href="/student" class="btn btn-outline-primary">Cancel</a>
            <button type="submit" href="/student" class="btn btn-danger">Delete</button>
        </div>
    </div>
</form>

<p><i>@ViewBag.Date</i></p>
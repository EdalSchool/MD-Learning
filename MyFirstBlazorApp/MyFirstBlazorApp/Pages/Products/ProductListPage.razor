@page "/"

@using Entities
@using Business

<div class="text-center text-primary">
    <span class="fa-solid fa-industry" style="font-size:60px"></span>
    <h2>Manew Warehouses Inc.</h2>
    <h4>Where we store the best for YOU</h4>
    <h5>Start managing your own storage system.</h5>
</div>

<hr/>

<a class="btn btn-success" href="product/create"><i class="fa-solid fa-plus"></i> Create Product</a> 
<a class="btn btn-secondary" href="storage/create"><i class="fa-solid fa-box-open"></i> Store Product</a>
<a class="btn btn-warning" href="inouts"><i class="fa-solid fa-right-left"></i> Register an Entry or an Exit</a> 
<hr/>
<div class="input-group mb-3">
    <select class="form-control" @onchange="CategoryChange">
        <option value="">Select a category...</option>

        @foreach (var category in categories)
        {
            <option value="@category.CategoryId">@category.CategoryName</option>
        }
    </select>
    <a class="btn btn-danger" href="categories"><i class="fa-solid fa-tags" data-fa-transform="flip-h"></i> Categories</a>
</div>
<hr/>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Reference</th>
            <th>Category</th>
            <th>Quantity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in temproducts)
        {
            <tr>
                <td>@product.ProductName</td>
                <td>@product.ProductId</td>
                <td>@product.CategoryId</td>
                <td>@product.TotalQuantity</td>
                 <td>
                    <a class="btn btn-primary" href="product/@product.ProductId"><i class="fa-solid fa-eye"></i> Details</a>
                    <a class="btn btn-secondary" href="product/update/@product.ProductId"><i class="fa-solid fa-pen-to-square"></i> Edit</a>
                    <a class="btn btn-danger" href="product/remove/@product.ProductId"><i class="fa-solid fa-trash"></i> Remove</a>
                    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                      Launch demo modal
                    </button>
                    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                          </div>
                          <div class="modal-body">
                            ...
                          </div>
                          <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                            <button type="button" class="btn btn-primary">Save changes</button>
                          </div>
                        </div>
                      </div>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (products == null)
{
    <div class="text-center text-secondary">
        <h1>

            <i class="fa-solid fa-face-sad-tear fa-2xl"></i><br/>
            @nullmessage
        </h1>
    </div>
}

@code {
    List<Product> products = new List<Product>();
    List<Product> temproducts = new List<Product>();
    List<Category> categories = new List<Category>();
    string nullmessage = "Sorry, there's nothing here";

    protected override async Task OnInitializedAsync()
    {
        products = BsProduct.ProductList();
        categories = BsCategory.CategoryList();
        temproducts = products;
    }

    private void CategoryChange(ChangeEventArgs e)
    {
        temproducts = products.Where(c => c.CategoryId == e.Value.ToString()).ToList();
    }
}

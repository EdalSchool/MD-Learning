@using Entities
@using Business
@inject NavigationManager NavManager

<h2>Product Creation</h2>

<EditForm Model="oProduct">
    <div class="form-group">
        <div class="text-danger">@namemessage</div><br/>
        <label for="formGroupExampleInput" >Name:</label>
        <InputText @bind-Value="oProduct.ProductName" class="form-control" id="formGroupExampleInput" placeholder="Type the name of the new product" />
    </div>
    <div class="form-group">
        <label  for="formGroupExampleInputR">Reference:</label>
        <InputText @bind-Value="oProduct.ProductId" class="form-control" id="formGroupExampleInputR" placeholder="Type the product reference" />
    </div>
    <div class="form-group">
        <label id="formGroupExampleInputD">Description:</label>
        <InputTextArea @bind-Value="oProduct.ProductDescription" class="form-control" id="formGroupExampleInputD" placeholder="Type the product description"/>
    </div>
    <div class="form-group">
        <label>Category:</label>
        <InputSelect @bind-Value="oProduct.CategoryId" class="form-control">
            <option value="">Select of what category it's the new product</option>
            @foreach(var category in categories)
            {
                <option value = "@category.CategoryId">@category.CategoryName</option>
            }
        </InputSelect>
    </div>
    <input type="button" class="btn btn-success" value="Add Product" @onclick="SaveProduct"/>
</EditForm>

@code {
    Product oProduct = new Product();
    List<Category> categories = new List<Category>();
    string namemessage;

    protected override async Task OnInitializedAsync()
    {
        categories = BsCategory.CategoryList();
    }

    private void SaveProduct()
    {   
        if(oProduct.ProductName == null)
        {
            namemessage = "Mmmm... The name field is required";
            
        }

        BsProduct.ProductCreation(oProduct);
        NavManager.NavigateTo("");
    }
}
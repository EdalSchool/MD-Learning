@using Entities
@using Business
@inject NavigationManager NavManager

<h2>Product Creation</h2>

<EditForm Model="oProduct">
    <div class="form-group">
        <label>Name:</label>
        <InputText @bind-Value="oProduct.ProductName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Reference:</label>
        <InputText @bind-Value="oProduct.ProductId" class="form-control" />
    </div>
    <div class="form-group">
        <label>Description:</label>
        <InputTextArea @bind-Value="oProduct.ProductDescription" class="form-control" />
    </div>
    <div class="form-group">
        <label>Category:</label>
        <InputSelect @bind-Value="oProduct.CategoryId" class="form-control">
            <option value="">Select of what category is the new product</option>
            @foreach(var category in categories)
            {
                <option value = "@category.CategoryId">@category.CategoryName</option>
            }
        </InputSelect>
    </div>
    <input type="button" class="btn btn-success" value="Add Product" @onclick="SaveProduct"/>
</EditForm>

@code {
    Product oProduct = new Product();
    List<Category> categories = new List<Category>();

    protected override async Task OnInitializedAsync()
    {
        categories = BsCategory.CategoryList();
    }

    private void SaveProduct()
    {
        BsProduct.ProductCreation(oProduct);
        NavManager.NavigateTo("");
    }
}
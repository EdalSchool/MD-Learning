<div class="page">
    <main>
        <style>
            .hidden {
                display: none;
            }

            table {
                background-color: #F8F9FA;
            }

                table.table-rounded {
                    border-spacing: 0;
                    border-collapse: separate;
                    border-radius: 20px;
                    border: solid 1px;
                    border-color: white;
                }

            .btns {
                border-radius: 15px;
            }

                .btns:hover {
                    color: #DC3545;
                }

            .more:hover {
                color: white;
                border-radius: 25%;
                background-color: #DC3545;
            }

            .morev:hover {
                color: #DC3545;
            }

            .btn {
                font-family: 'Baloo 2', cursive;
            }

            h1, h2, h3, h4, h5, h6, th, td, option, li, p {
                font-family: 'Baloo 2', cursive;
            }

            .navicon {
                padding-right: 2px;
            }

            .navnew {
                color: #DC3545;
                border-color: white;
            }

                .navnew:hover {
                    color: white;
                    border-color: white;
                }

            .navitem {
                padding: 3px;
                color: #DC3545;
                border: solid;
                background-color: white;
                border-radius: 10px;
                border-color: white;
            }

                .navitem:active {
                    color: #DC3545;
                }

                .navitem:hover {
                    color: white;
                    border: solid;
                    background-color: #DC3545;
                    border-radius: 10px;
                    border-color: #DC3545;
                }

            .logo {
                border-radius: 10px;
                background-color: #DC3545;
            }

            .logo2 {
                color: black;
                border-color: white
            }

            .savebtn {
                border-radius: 18px;
                border-color: #DC3545;
            }

                .savebtn:hover {
                    border-color: #DC3545;
                    color: #2A9061;
                }

            .cancelbtn {
                border-radius: 18px;
                border-color: #0D6EFD;
            }

                .cancelbtn:hover {
                    border-color: #0D6EFD;
                    color: #DC3545;
                }

            .search {
                border-color: #D7DEE4;
                color: black;
            }

                .search:hover {
                    border-color: #DC3545;
                    color: #DC3545;
                }
        </style>

        <nav class="navbar navbar-expand-lg bg-white">
            <div class="container-fluid">
                <div style="border-color: white;" class="navbar-toggler" data-bs-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">

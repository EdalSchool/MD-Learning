@using Entities
@using Business
@using System.Linq
@inject NavigationManager NavManager

@inherits LayoutComponentBase
<head>
    <link rel="icon" type="image/png" href="manewlogo.png">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Quicksand:wght@400;500&display=swap" rel="stylesheet">
</head>

<div class="page">
    <main>
        <style>
            :root {
                --white: #FFFFFF;
                --black: #000000;
                --very-light-pink: #C7C7C7;
                --text-input-field: #F7F7F7;
                --hospital-green: #DC3545;
                --sm: 14px;
                --md: 16px;
                --lg: 18px;
            }

            body {
                margin: 0;
                font-family: 'Quicksand', sans-serif;
            }

            .primary-btn {
                background-color: var(--hospital-green);
                border-radius: 8px;
                height: 40px;
                font-size: var(--md);
                border-radius: 8px;
                border: none;
                color: var(--white);
                font-weight: bold;
                font-family: 'Quicksand', sans-serif;
            }

            .secondary-btn {
                background-color: var(--white);
                border-radius: 8px;
                height: 40px;
                font-size: var(--md);
                border-radius: 8px;
                border: 1px solid;
                border-color: var(--hospital-green);
                color: var(--hospital-green);
                font-weight: bold;
                font-family: 'Quicksand', sans-serif;
            }

            .title {
                font-size: var(--lg);
                font-weight: bold;
                margin-bottom: 30px;
                white-space: nowrap;
                width: 100%;
                overflow: hidden;
                text-overflow: ellipsis;
            }

                .title span a {
                    text-decoration: none;
                    color: var(--hospital-green);
                }

            nav {
                border-bottom: 1px solid var(--very-light-pink);
            }

            .hidden {
                display: none;
            }

            table {
                background-color: #F8F9FA;
            }

                table.table-rounded {
                    border-spacing: 0;
                    border-collapse: separate;
                    border-radius: 20px;
                    border: solid 1px;
                    border-color: white;
                }

            .btns {
                border-radius: 15px;
            }

                .btns:hover {
                    color: #DC3545;
                }

            .more:hover {
                color: white;
                border-radius: 25%;
                background-color: #DC3545;
            }

            .morev:hover {
                color: #DC3545;
            }

            .btn {
                font-family: 'Quicksand', sans-serif;
            }

            h1, h2, h3, h4, h5, h6, th, td, option, li, p {
                font-family: 'Quicksand', sans-serif;
            }

            .navicon {
                padding-right: 2px;
            }

            .navnew {
                color: #DC3545;
                border-color: white;
            }

                .navnew:hover {
                    color: white;
                    border-color: white;
                }

            .navitem {
                padding: 3px;
                color: #DC3545;
                border: solid;
                background-color: white;
                border-radius: 10px;
                border-color: white;
            }

                .navitem:active {
                    color: #DC3545;
                }

                .navitem:hover {
                    color: white;
                    border: solid;
                    background-color: #DC3545;
                    border-radius: 10px;
                    border-color: #DC3545;
                }

            .logo {
                border-radius: 10px;
                background-color: #DC3545;
            }

            .logo2 {
                color: black;
                border-color: white
            }

            .savebtn {
                border-radius: 18px;
                border-color: #DC3545;
            }

                .savebtn:hover {
                    border-color: #DC3545;
                    color: #2A9061;
                }

            .cancelbtn {
                border-radius: 18px;
                border-color: #0D6EFD;
            }

                .cancelbtn:hover {
                    border-color: #0D6EFD;
                    color: #DC3545;
                }

            .search {
                border-color: #D7DEE4;
                color: black;
            }

                .search:hover {
                    border-color: #DC3545;
                    color: #DC3545;
                }

            .nav-items {
                margin-left: auto !important;
                margin-right: auto !important;
            }
        </style>

        <nav class="navbar navbar-expand-lg bg-white">
            <div class="container-fluid justify-content-even">
                <div style="border-color: white;" class="navbar-toggler" data-bs-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                    <button style="border-color: white;" class="btn btn-outline-light" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight">
                        <i class="navbutton fa-solid fa-bars fa-xl text-danger"></i>
                    </button>
                </div>

                @*<div class="logo" style="padding: 12px;"><a href=""><i class="text-white fa-solid fa-m fa-xl"></i></a></div>*@

                <div class="nav-items collapse navbar-collapse text-center justify-content-center" id="navbarTogglerDemo02">
                    <ul class="navbar-nav d-flex">
                        <li class="nav-item">
                            <a id="navi" style="font-family: 'Quicksand', sans-serif; font-weight: bold;" class="navitem nav-link" aria-current="page" href=""><i class="navicon fa-solid fa-house"></i> Home</a>
                        </li>
                        <li class="nav-item">
                            <a id="navi" style="font-family: 'Quicksand', sans-serif; font-weight: bold;" class="navitem nav-link" href="categories"><i class=" navicon fa-solid fa-shapes"></i> Categories</a>
                        </li>
                        <li class="nav-item">
                            <a id="navi" style="font-family: 'Quicksand', sans-serif; font-weight: bold;" class="navitem nav-link" href="warehouses"><i class="navicon fa-solid fa-warehouse"></i> Warehouses</a>
                        </li>
                        @*<li class="nav-item">
                            <a id="navi" style="font-family: 'Quicksand', sans-serif;, cursive;" class="navitem nav-link" href="search"><i class="navicon fa-solid fa-magnifying-glass"></i> Search</a>
                            </li>*@
                    </ul>
                </div>
            </div>
        </nav>

        <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
            <div class="offcanvas-header">
                <h5 class="offcanvas-title" id="offcanvasRightLabel">Manew</h5>
                <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
                <ul class="navbar-nav d-flex">
                    <li class="nav-item">
                        <a id="navi" style="font-family: 'Quicksand', sans-serif;, cursive;" class="navitem nav-link text-start" aria-current="page" href=""><i class="navicon fa-solid fa-house"></i> Home</a>
                    </li>
                    <li class="nav-item">
                        <a id="navi" style="font-family: 'Quicksand', sans-serif;, cursive;" class="navitem nav-link text-start" href="categories"><i class=" navicon fa-solid fa-shapes"></i> Categories</a>
                    </li>
                    <li class="nav-item">
                        <a id="navi" style="font-family: 'Quicksand', sans-serif;, cursive;" class="navitem nav-link text-start" href="warehouses"><i class="navicon fa-solid fa-warehouse"></i> Warehouses</a>
                    </li>
                </ul>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>


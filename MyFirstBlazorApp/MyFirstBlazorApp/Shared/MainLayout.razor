                    <div style="margin-left: auto; margin-right: auto;" class="navbar-nav me-auto mb-2 mb-lg-0">
                        <div class=" me-5 mb-2">
                            <a href="search" class="col-4 btn btn-outline-light form-control text-danger search">
                                <i style="visibility: hidden;">My name is Manuel Monteagudo</i>
                                <svg style="margin-right: 8px;" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                                </svg> Search <i style="visibility: hidden;">My name is Manuel Monteagudo</i>
                            </a>
                        </div>
                    </div>
                    <ul class="navbar-nav d-flex">
                        <li class="nav-item">
                            <a id="navi" style="font-family: 'Staatliches', cursive;" class="navitem nav-link" aria-current="page" href=""><i class="navicon fa-solid fa-house"></i> Home</a>
                        </li>
                        <li class="nav-item">
                            <a id="navi" style="font-family: 'Staatliches', cursive;" class="navitem nav-link" href="categories"><i class=" navicon fa-solid fa-shapes"></i> Categories</a>
                        </li>
                        <li class="nav-item">
                            <a id="navi" style="font-family: 'Staatliches', cursive;" class="navitem nav-link" href="warehouses"><i class="navicon fa-solid fa-warehouse"></i> Warehouses</a>
                        </li>
                        @*<li class="nav-item">
